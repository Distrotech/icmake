_varnames:
    _varnames
    ','
    vardef
    {
        $$ = *catcode(&$1, &$3);    // catenate variable    
                                    // initialization code  
    }            
|
    vardef
|
    error
    ';'
    zeroframe                       // Empty stmnt  
    {
        $$ = $3;
    }
;

vardefs:
    _varnames
    ';'
    {
        $$ = $1;                    // initialization code 
    }
;

