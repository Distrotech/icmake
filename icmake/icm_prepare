#!/bin/bash

try()
{
    echo $*
    $* || exit 1
}

echo Creating the intermediate destination directory ./tmp
try rm -rf tmp
try mkdir -p tmp

echo    Writing tmp/ROOT
echo "ROOT=$1/" > tmp/ROOT
 
. scripts/conversions

echo "
#define BINDIR      \"${BINDIR}\"
#define SKELDIR     \"${SKELDIR}\"
#define MANDIR      \"${MANDIR}\"
#define LIBDIR      \"${LIBDIR}\"
#define CONFDIR     \"${CONFDIR}\"
#define DOCDIR      \"${DOCDIR}\"
#define DOCDOCDIR   \"${DOCDOCDIR}\"
#define VERSION     \"${VERSION}\"
#define YEARS       \"${YEARS}\"
#define CPPFLAGS    ${CPPFLAGS}
    // Specify compiler options that should be used. Overruled by the CPPFLAGS
    // environment variable. 
    // The option "-Wall" is always used.
    // For profiling use the  -pg flags, and don't strip
#define LDFLAGS     ${LDFLAGS}
    // Specify linker options. None by default. Do not specify -s (strip) here
    // as strip is handled by adding a command to the build call.
" > tmp/INSTALL.im

cat tmp/INSTALL.im

echo Creating remaining intermediate destination directories
try  mkdir -p tmp/${BINDIR}  tmp/${LIBDIR}      tmp/${SKELDIR}  \
           tmp/${CONFDIR} tmp/${MANDIR}/man1 tmp/${MANDIR}/man7 \
           tmp/${DOCDIR}  tmp/${DOCDOCDIR}
  
CPPFLAGS=`echo ${CPPFLAGS} | sed 's/^[[:blank:]]*\"\(.*\)\"[[:blank:]]*$/\1/'`
LDFLAGS=`echo ${LDFLAGS} | sed 's/^[[:blank:]]*\"\(.*\)\"[[:blank:]]*$/\1/'`

